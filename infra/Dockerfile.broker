++ infra/Dockerfile.broker
FROM golang:1.22 AS builder
WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /identity-broker ./cmd/identity-broker

FROM gcr.io/distroless/base-debian12
WORKDIR /app
COPY --from=builder /identity-broker /app/identity-broker
COPY infra/sample-users.json /app/data/sample-users.json

EXPOSE 8080
ENTRYPOINT ["/app/identity-broker"]
